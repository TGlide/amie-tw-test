---
interface Props {
  href?: string
  secondary?: boolean
	class?: string
}
const { href, secondary, class: className } = Astro.props
const Element = href ? 'a' : 'button';
---

<Element
	class:list={[
		`inline-block cursor-pointer rounded-md border-0  p-[.7em_1.4em] text-center
		font-semibold focus:outline-none active:scale-[0.98]`,
		secondary
		? 'shadow shadow-[#eee] bg-white hover:shadow-[#ddd] text-black'
		: 'bg-gray-800 hover:bg-black text-white',
		className,
	]}
	{href}
>
  <slot />
</Element>
